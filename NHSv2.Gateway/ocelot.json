{
  "GlobalConfiguration": {
    "BaseUrl": "https://localhost:5000"
  },
  "Routes": [
    {
      "UpstreamPathTemplate": "/api/appointments",
      "UpstreamHttpMethod": [ "Get" ],
      "DownstreamPathTemplate": "/appointments",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
          {
          "Host": "localhost",
          "Port": 5001
          }
      ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Keycloak",
        "AllowedScopes": []
      },
      "RouteClaimsRequirement": {
        "role": ["patient"]
      }
    },
    {
      "UpstreamPathTemplate": "/api/appointments-doctor",
      "UpstreamHttpMethod": [ "Get" ],
      "DownstreamPathTemplate": "/appointments-doctor",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5001
        }
      ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Keycloak",
        "AllowedScopes": []
      },
      "RouteClaimsRequirement": {
        "roles": ["doctor"]
      }
    }
  ]
}